@using Project.Enums
@model RestaurantFormViewModel
@{
    ViewBag.Title = "Редактирай ресторант";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Име</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Информация</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegionalCity" class="control-label"></label>
                <select asp-for="RegionalCity" class="form-control" asp-items="Html.GetEnumSelectList<RegionalCity>()">
                    <option value="">Please chose your RegionalCity</option>
                </select>
                <span asp-validation-for="RegionalCity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address" class="form-label-add-edit">Адрес</label>
                <input asp-for="@Model.Address" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl1" class="form-label-add-edit">Image URL Първа снимка</label>
                <input asp-for="@Model.ImageUrl1" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl2" class="form-label-add-edit">Image URL Втора снимка</label>
                <input asp-for="@Model.ImageUrl2" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl2" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl3" class="form-label-add-edit">Image URL Трета снимка</label>
                <input asp-for="@Model.ImageUrl3" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl3" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GoogleMaps" class="form-label-add-edit">Google Maps Url</label>
                <input asp-for="@Model.GoogleMaps" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.GoogleMaps" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Вид ресторант</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    @foreach (var type in Model.Categories)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-info mb-2 w-100 p-3 fw-bold" type="submit" value="Редактирай" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}