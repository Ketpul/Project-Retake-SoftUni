@model RestaurateurRequestFromViewModel
@{
    ViewBag.Title = "Заявка за ресторантьор";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">Име</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Фамилия</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Телефон</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Information" class="form-label-add-edit">Информация</label>
                <textarea asp-for="@Model.Information" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Information" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Изпрати" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}