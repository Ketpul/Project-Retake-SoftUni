@model IEnumerable<RestaurateurInfoViewModel>
@{
    ViewBag.Title = "All Restaurateur Request";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var a in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <p class="mb-0"><span class="fw-bold">FirstName: </span>@a.FirstName</p>
                <p class="mb-0"><span class="fw-bold">LastName: </span>@a.LastName</p>
                <p class="mb-0"><span class="fw-bold">Information: </span>@a.Information</p>
                <p class="mb-0"><span class="fw-bold">DateTime: </span>@a.DateTime</p>
            </div>


            <form class="input-group-sm" asp-area="Admin" asp-controller="Restauranteur" asp-action="Yes" asp-route-id="@a.RestaurateurId">
                <input type="submit" value="Yes" class="btn btn-success mb-3 w-100 p-3 fw-bold" />
            </form>
            <form class="input-group-sm" asp-area="Admin" asp-controller="Restauranteur" asp-action="No" asp-route-id="@a.RestaurateurId">
                <input type="submit" value="No" class="btn btn-danger mb-3 w-100 p-3 fw-bold" />
            </form>
        </div>
    }
</div>

